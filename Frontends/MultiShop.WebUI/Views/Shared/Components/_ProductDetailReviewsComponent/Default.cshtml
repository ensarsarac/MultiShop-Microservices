@model List<ResultCommentDto>

<div class="tab-pane fade" id="tab-pane-3">
    <div class="row">
            <div class="col-md-6">
                <h4 class="mb-4">@Model.Count() yorum bulunmaktadır.</h4>
            @foreach (var item in Model)
            {
                <div class="media mb-4">
                    <img src="@item.ImageUrl" alt="Image" class="img-fluid mr-3 mt-1 rounded-pill" style="width: 50px; height:50px;">
                    <div class="media-body">
                        <h6>@item.NameSurname<small> - <i>@item.CreatedDate.ToShortDateString()</i></small></h6>
                        <div class="text-primary mb-2">
                            @for (int i = 0; i < item.Rating; i++)
                            {
                                <i class="fas fa-star"></i>

                            }
                        </div>
                        <p>@item.CommentDetail</p>
                    </div>
                </div>
            }

            </div>
            <hr />
        @await Component.InvokeAsync("_ProductDetailAddCommentComponent")
    </div>
</div>