
@model List<BasketItemDto>

<h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>
<div class="bg-light p-30 mb-3">
    
    <div class="border-bottom pt-3 pb-2">
            <h6 class="mb-3">Ürünler</h6>
            @foreach (var item in Model)
            {
                <div class="d-flex justify-content-between">
                    <p> @item.ProductName (@item.Quantity)</p>
                    <h6>@item.Price ₺</h6>
                </div>
            }
            
        </div>
    <div class="d-flex mb-3 justify-content-between">
        <h6 class="font-weight-medium">Alışveriş Tutarı</h6>
        <h6 class="font-weight-medium">15 ₺</h6>
    </div>
        <div class="d-flex mb-3 justify-content-between">
            <h6 class="font-weight-medium">Kargo Fiyatı</h6>
            <h6 class="font-weight-medium">15 ₺</h6>
        </div>
    
    </div>
<div class="mb-5">
    <div class="d-flex justify-content-between">
        <h6>Genel Toplam Ücret</h6>
        <h5>$160</h5>
    </div>
</div>
    
