@model CreateCommentDto
<div class="col-md-6">
    <h4 class="mb-4">Bir yorum bırakın</h4>
    <small>Yorumunuzun alınması için, geçerli bir email adresi giriniz. </small>
    <div class="d-flex my-3">
        <p class="mb-0 mr-2">Ürün Puanınız * :</p>
        <div class="text-primary">
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
        </div>
    </div>
    <form method="post" action="/ProductList/AddComment">
        <div class="form-group">
            <label for="name">Adınız soyadınız *</label>
            <input type="text" name="NameSurname" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="email">Email adresiniz *</label>
            <input type="email" name="Email" class="form-control" id="email">
        </div>
        <div class="form-group">
            <label for="message">Yorumunuz *</label>
            <textarea id="message" name="CommentDetail" cols="30" rows="5" class="form-control"></textarea>
        </div>
       
        <div class="form-group mb-0">
            <input type="submit" value="Yorum Yap" class="btn btn-primary px-3">
        </div>
    </form>
</div>