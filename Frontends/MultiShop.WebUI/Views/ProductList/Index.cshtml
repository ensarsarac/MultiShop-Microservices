@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="#">Ana Sayfa</a>
                    <a class="breadcrumb-item text-dark" href="#">Ürünler</a>
                    <span class="breadcrumb-item active">Ürün Listesi</span>
                </nav>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-3 col-md-4">
               @await Component.InvokeAsync("_ProductListPriceFilterComponent")
               @await Component.InvokeAsync("_ProductListColorFilterComponent")
               @await Component.InvokeAsync("_ProductListSizeFilterComponent")
            </div>
            <div class="col-lg-9 col-md-8">
                <div class="row pb-3">
                @await Component.InvokeAsync("_ProductListSortingComponent")
                @await Component.InvokeAsync("_ProductListComponent",ViewBag.id)
                </div>
            </div>
        </div>
    </div>
    
