<form class="mb-30" action="/ShoppingCart/Index" method="get">
    <div class="input-group">
        <input name="code" type="text" class="form-control border-0 p-4" placeholder="Kopun Kodunuz">
        <div class="input-group-append">
            <button class="btn btn-primary">Kuponu Uygula</button>
        </div>
    </div>
</form>

<h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>

<div class="bg-light p-30 mb-5">
    <div class="border-bottom pb-2">
        <div>
            @if (!string.IsNullOrEmpty(ViewBag.CouponMessage))
            {
                <p class="text-success">@ViewBag.CouponMessage</p>
                <br />
            }
        </div>
        <div>
            @if (!string.IsNullOrEmpty(ViewBag.NotFoundCoupon))
            {
                <p class="text-danger">@ViewBag.NotFoundCoupon</p>
                <br />
            }
        </div>
        <div class="d-flex justify-content-between mb-3">
           
            <h6>Toplam Fiyat</h6>
            <h6>@ViewBag.totalPrice </h6>
        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Kdv</h6>
            <h6 class="font-weight-medium">@ViewBag.tax</h6>
        </div>
    </div>
    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5>Toplam</h5>
            <h5>@ViewBag.totalPriceWithTax</h5>
        </div>
        <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödeme Adımına Geç</button>
    </div>
</div>