@model UpdateProductImageDto
@{
    ViewData["Title"] = "ImagesList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="chart-box">
            <h4>Ürün Görsel Listesi</h4>
            <p>Ürün Görselleri ile ilgili güncelleme işlemini panel üzerinden gerçekleştirebilirsiniz.</p>
            <hr />
            <div class="bs-example" data-example-id="bordered-table">
                <form method="post">
                    <input type="hidden" asp-for="@Model.ProductImageID" />
                    <input type="hidden" asp-for="@Model.ProductID" />
                    <div class="form-group">
                        <label for="exampleInputEmail1">Resim 1</label>
                        <input type="text" asp-for="@Model.Image1" class="form-control" id="exampleInputEmail1" placeholder="Resim 1">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Resim 2</label>
                        <input type="text" asp-for="@Model.Image2" class="form-control" id="exampleInputEmail1" placeholder="Resim 2">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Resim 3</label>
                        <input type="text" asp-for="@Model.Image3" class="form-control" id="exampleInputEmail1" placeholder="Resim 3">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Resim 4</label>
                        <input type="text" asp-for="@Model.Image4" class="form-control" id="exampleInputEmail1" placeholder="Resim 4">
                    </div>
                   
                    <button type="submit" class="btn btn-default">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>