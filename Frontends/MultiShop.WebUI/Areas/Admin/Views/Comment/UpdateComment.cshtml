@model UpdateCommentDto
@{
    ViewData["Title"] = "UpdateComment";
    ViewData["MenuTitle"] = "Yorum İşlemleri";
    ViewData["v1"] = "Ana Sayfa";
    ViewData["v2"] = "Yorumlar";
    ViewData["v3"] = "Yorum Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="chart-box">
            <h4>Yorum Güncelle</h4>
            <p>Yorum ile ilgili güncelleme işlemini panel üzerinden gerçekleştirebilirsiniz.</p>
            <hr />
            <div class="bs-example" data-example-id="bordered-table">
                <form method="post">
                    <input type="hidden" asp-for="@Model.UserCommentId" />
                    <input type="hidden" asp-for="@Model.ProductId" />
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ad Soyad</label>
                        <input type="text" asp-for="@Model.NameSurname" class="form-control" id="exampleInputEmail1" placeholder="Ad Soyad">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Görsel Linki</label>
                        <input type="text" asp-for="@Model.ImageUrl" class="form-control" id="exampleInputEmail1" placeholder="Görsel Linki">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="text" asp-for="@Model.Email" class="form-control" id="exampleInputEmail1" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Kullanıcı Puanı</label>
                        <input type="text" asp-for="@Model.Rating" class="form-control" id="exampleInputEmail1" placeholder="Kullanıcı Puanı">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Yorum</label>
                        <textarea type="text" asp-for="@Model.CommentDetail" class="form-control" id="exampleInputEmail1" placeholder="Kullanıcı Puanı">@Model.CommentDetail </textarea>
                    </div>
                    <button type="submit" class="btn btn-default">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>