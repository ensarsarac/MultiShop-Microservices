@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="chart-box">
            <h4>Hakkımızda Listesi</h4>
            <p>Hakkımızda ile ilgili güncelleme işlemini panel üzerinden gerçekleştirebilirsiniz.</p>
            <hr />
            <div class="bs-example" data-example-id="bordered-table">
                <form method="post">
                    <input type="hidden" asp-for="@Model.AboutId" />
                    <div class="form-group">
                        <label for="exampleInputEmail1">Adres</label>
                        <input type="text" asp-for="@Model.Address" class="form-control" id="exampleInputEmail1" placeholder="Adres">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="text" asp-for="@Model.Email" class="form-control" id="exampleInputEmail1" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Telefon Numarası</label>
                        <input type="text" asp-for="@Model.Phone" class="form-control" id="exampleInputEmail1" placeholder="Telefon Numarası">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Açıklama</label>
                        <textarea type="text" asp-for="@Model.Description" class="form-control" id="exampleInputEmail1" placeholder="Telefon Numarası">@Model.Description </textarea>
                    </div>
                    <button type="submit" class="btn btn-default">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>