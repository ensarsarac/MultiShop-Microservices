@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    ViewData["MenuTitle"] = "Hakkımızda İşlemleri";
    ViewData["v1"] = "Ana Sayfa";
    ViewData["v2"] = "Hakkımızda";
    ViewData["v3"] = "Hakkımızda Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="chart-box">
            <h4>Hakkımızda Listesi</h4>
            <p>Hakkımızda ile ilgili ekleme işlemini panel üzerinden gerçekleştirebilirsiniz.</p>
            <hr />
            <div class="bs-example" data-example-id="bordered-table">
                <form method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Adres</label>
                        <input type="text" name="Address" class="form-control" id="exampleInputEmail1" placeholder="Adres">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="text" name="Email" class="form-control" id="exampleInputEmail1" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Telefon Numarası</label>
                        <input type="text" name="Phone" class="form-control" id="exampleInputEmail1" placeholder="Telefon Numarası">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Açıklama</label>
                        <textarea type="text" name="Description" class="form-control" id="exampleInputEmail1" placeholder="Telefon Numarası"> </textarea>
                    </div>
                    <button type="submit" class="btn btn-default">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>