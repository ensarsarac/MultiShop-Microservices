@model UpdateFeatureSliderDto
@{
    ViewData["Title"] = "UpdateFeatureSlider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="chart-box">
            <h4>Öne Çıkan Alan Listesi</h4>
            <p>Öne Çıkan Alan ile ilgili ekleme işlemini panel üzerinden gerçekleştirebilirsiniz.</p>
            <hr />
            <div class="bs-example" data-example-id="bordered-table">
                <form method="post">
                    <input type="hidden" asp-for="@Model.FeatureSliderId" />
                    <div class="form-group">
                        <label for="exampleInputEmail1">Görsel Başlık</label>
                        <input type="text" asp-for="@Model.Title" class="form-control" id="exampleInputEmail1" placeholder="Görsel Başlığı">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Görsel Linki</label>
                        <input type="text" asp-for="@Model.ImageUrl" class="form-control" id="exampleInputEmail1" placeholder="Görsel Linki">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Görsel Açıklaması</label>
                        <textarea type="text" asp-for="@Model.Description" cols="4" rows="4" class="form-control" id="exampleInputEmail1" placeholder="Görsel Açıklaması"> </textarea>
                    </div>
                    <button type="submit" class="btn btn-default">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>