@model List<MultiShop.DtoLayer.MessageDtos.ResultInboxMessageDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mesajlar</h4>
                <div class="table-responsive">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Gönderen
                                </th>
                                <th>
                                    Konu
                                </th>
                                <th>
                                    Tarih
                                </th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Mesajı Aç</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td class="py-1">@count</td>
                                    <td>@item.SenderId</td>
                                    <td>@item.Subject</td>
                                    <td>@item.MessageDate.ToShortDateString()</td>
                                    <td>@item.IsRead</td>
                                    <td><a href="#" class="btn btn-danger">Sil</a></td>
                                    <td><a href="#" class="btn btn-info">Mesajı Aç</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
