

@model List<MultiShop.DtoLayer.OrderDtos.OrderingDtos.GetOrderingByUserIdDto>

@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Financial management review</h4>
                <div class="table-responsive">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Toplam Fiyat
                                </th>
                                <th>
                                    Sipariş Tarihi
                                </th>
                                <th>
                                    Sipariş Detayları
                                </th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td class="py-1">@count</td>
                                    <td>@item.TotalPrice</td>
                                    <td>@item.OrderDate.ToShortDateString()</td>
                                    <td><a href="#" class="btn-warning btn">Sipariş Detayları  </a>"</td>
                                </tr>
                            }    
                            
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
